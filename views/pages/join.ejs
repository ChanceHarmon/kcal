<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/head') %>
</head>
<body id="join-page">
    <header>
        <div class="topnav">
            <a href="/" class="active">KCAL</a>
            <div id="myLinks">
              <a href="/about">About</a>
            </div>
            <a href="javascript:void(0);" class="icon" onclick="renderMenuIcon()">
                <i class="fa fa-bars"></i>
            </a>
          </div>
    </header>
  <div id="create-account-container">
    <h1 class="info-banner"> Create an Account</h1>

  <div class="join-container">
    <form class="form-signup" action="/join" method="post">
      <input class="account-input" type="text" name="firstname" class="form-control" placeholder="First Name" autofocus>
      <input class="account-input" type="text" name="lastname" class="form-control" placeholder="Last Name">
      <input class="account-input" type="email" name="username" class="form-control" placeholder="Email" required>
      <button type="submit">Register</button>
    </form>
  </div>
  <div class="login-container">
    <a href="/">Login</a>
  </div>
</div>
  <%- include('../layouts/footer') %>
</body>
</html>



